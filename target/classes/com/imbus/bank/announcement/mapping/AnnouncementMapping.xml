<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.imbus.bank.announcement.dao.AnnouncementDao">
    <insert id="addAnnouncement">
        INSERT INTO tb_announcement
        <set>
            title = #{title}
            author = #{author}
            content = #{content}
        </set>
    </insert>

    <update id="editAnnouncement">
        UPDATE tb_announcement
        <set>
            title = #{title}
            author = #{author}
            content = #{content}
        </set>
        <where>
            id = #{announcementID}
        </where>
    </update>

    <delete id="deleteAnnouncement">
        DELETE FROM  tb_announcement
        <where>
            id = #{announcementID}
        </where>
    </delete>


</mapper>